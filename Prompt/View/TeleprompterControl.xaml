<UserControl
    x:Class="Prompt.View.TeleprompterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prompt.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="200"
    Background="Black"
    DataContext="{Binding Teleprompter, Source={StaticResource Locator}}"
    Foreground="White"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.ColumnSpan="2"
                Margin="8"
                HorizontalAlignment="Center"
                FontSize="34"
                FontWeight="Bold"
                Text="Prompt" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="4,2"
                Content="Start prompting" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Margin="4,2,2,2"
                Content="Previous script" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="2,2,4,2"
                Content="Next script" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="4,2,2,2"
                Content="Add script" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Margin="2,2,4,2"
                Content="Remove script" />
            <Button
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="4,2"
                Content="Edit script" />
            <ToggleButton
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="4,2"
                Content="Reverse script" />
        </Grid>
        <GroupBox
            Margin="4"
            Padding="4"
            Header="Prompt Placement">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Position" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="Opacity" />
                <RadioButton
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Left"
                    Foreground="White" />
                <RadioButton
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Right"
                    Foreground="White" />
                <RadioButton
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Both"
                    Foreground="White" />
                <RadioButton
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="None"
                    Foreground="White" />
                <Slider
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    Grid.Column="1"
                    Orientation="Vertical"
                    TickPlacement="BottomRight" />
            </Grid>

        </GroupBox>
        <GroupBox Margin="4" Header="Text Settings">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ComboBox
                    Grid.ColumnSpan="2"
                    Margin="4"
                    ItemsSource="{Binding FontFamilies}"
                    SelectedItem="{Binding FontFamily, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="{Binding}" Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Font size" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Line height" />
                <Slider
                    Grid.Row="2"
                    Grid.Column="0"
                    Height="60"
                    Margin="4"
                    Orientation="Vertical"
                    TickPlacement="BottomRight" />
                <Slider
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="4"
                    Orientation="Vertical"
                    TickPlacement="BottomRight" />
                <ToggleButton
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="4"
                    Content="White Background" />
            </Grid>
        </GroupBox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="0,4,0,0"
                HorizontalAlignment="Center"
                Text="Elapsed time" />
            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Center"
                FontSize="36"
                Text="00:00:00" />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                Text="Estimated time remaining" />
            <TextBlock
                Grid.Row="3"
                HorizontalAlignment="Center"
                FontSize="36"
                Text="00:00:00" />
            <ProgressBar
                Grid.Row="4"
                Height="24"
                Value="40"
                Margin="4,0,4,4" />
        </Grid>
    </StackPanel>
</UserControl>
